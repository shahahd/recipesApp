<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".addRecipe">

    <Button
        android:id="@+id/backbtn"
        android:layout_width="20dp"
        android:layout_height="24dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/keyboard_left_arrow_button"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimaryDark"
        android:text="save"
        android:onClick="UploadToFireBase"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="659dp"
        android:layout_marginTop="68dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:gravity="center"
                android:onClick="pickFromGallery"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.529"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/addpho" />

            <LinearLayout

                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="256dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.058">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:text="Recipe Name"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/rcName"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="Description "
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/rcDescrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:textAlignment="textStart" />
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-260dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="433dp">

                <TextView
                    android:id="@+id/pt"
                    android:layout_width="97dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="56dp"
                    android:text="Preparing time"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/serves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Serving"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/up"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/caret_arrow_up"
                    android:onClick="tUp"
                    app:layout_constraintEnd_toStartOf="@+id/button"
                    app:layout_constraintTop_toBottomOf="@+id/pt" />

                <Button
                    android:id="@+id/up2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/caret_arrow_up"
                    android:onClick="tUp2"
                    app:layout_constraintEnd_toStartOf="@+id/button2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cook_time" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="64dp"
                    android:background="@drawable/sort_down"
                    android:onClick="tDown2"
                    app:layout_constraintEnd_toStartOf="@+id/serving"
                    app:layout_constraintTop_toBottomOf="@+id/cook_time" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/sort_down"
                    android:onClick="tDown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner2" />

                <TextView
                    android:id="@+id/timeIn"
                    android:layout_width="21dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="9dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/button2"
                    app:layout_constraintStart_toEndOf="@+id/up2"
                    app:layout_constraintTop_toBottomOf="@+id/cook_time" />

                <TextView
                    android:id="@+id/pretime2"
                    android:layout_width="21dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="9dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/button"
                    app:layout_constraintHorizontal_bias="0.428"
                    app:layout_constraintStart_toEndOf="@+id/up"
                    app:layout_constraintTop_toBottomOf="@+id/pt" />

                <TextView
                    android:id="@+id/cook_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text=" Time In"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="8dp"
                    android:entries="@array/value"
                    android:gravity="left"
                    android:paddingRight="0dp"
                    app:layout_constraintStart_toEndOf="@+id/cook_time"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="50dp"
                    android:layout_height="21dp"
                    android:entries="@array/value"
                    android:gravity="left"
                    android:paddingRight="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pt"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.082" />

                <EditText
                    android:id="@+id/serving"
                    android:layout_width="73dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:hint="per Person"
                    android:inputType="textPersonName"
                    android:selectAllOnFocus="true"
                    android:singleLine="false"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/serves" />
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="396dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:paddingLeft="6dp"
                    android:text="Ingredients"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/add"
                    android:onClick="onAddField"
                    android:paddingLeft="10dp"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/parent_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="6dp"
                    android:paddingRight="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/quantityEditText"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number" />

                    <Spinner
                        android:id="@+id/type_spinner"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:entries="@array/mesu"
                        android:gravity="right" />

                    <EditText
                        android:id="@+id/number_edit_text"
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                    <Button
                        android:id="@+id/delete_button"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="9dp"
                        android:layout_weight=".5"
                        android:background="@drawable/remove"
                        android:baselineAligned="false"
                        android:onClick="onDelete" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="396dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="373dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="Steps"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:onClick="onAddStep"
                    android:background="@drawable/add"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/parent_linear_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="396dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editText5"
                        android:layout_width="334dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:paddingRight="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/delete_button2"
                        android:layout_width="25dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="9dp"
                        android:layout_weight=".5"
                        android:background="@drawable/remove"
                        android:baselineAligned="false"
                        android:onClick="onSDelete" />
                </LinearLayout>
            </LinearLayout>
            <!-- <com.goole.android.material.chip.Chip
                 android:layout_width="warp_content"
                 android:layout_height="warp_content"
                 android:padding="12dp"
                 android:text="chip"
                 />
             <com.goole.android.material.chip.Chip
                 android:layout_width="warp_content"
                 style="@style/Widget.MaterialComponent.Chip.Entry"
                 android:layout_height="warp_content"
                 android:layout_marginBottom="8dp"
                 android:padding="12dp"
                 android:text="chip"
                 />-->

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>